<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="rocks.spud.minecraft.mineclock.control.TitleBar" styleClass="titleBar" onMousePressed="#onMousePressed" onMouseDragged="#onMouseDragged">
    <Label fx:id="titleLabel" styleClass="title" />

    <Pane HBox.hgrow="ALWAYS" />

    <HBox styleClass="actions">
        <HBox fx:id="buttons" styleClass="additional-actions" />

        <Button fx:id="iconifyButton" onAction="#onIconify" styleClass="iconify" text="&#xf070;" />
        <Button fx:id="closeButton" onAction="#onClose" styleClass="close" text="&#xf00d;" />
    </HBox>
</fx:root>
